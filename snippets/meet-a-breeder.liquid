{% doc %}
  Renders the "Meet a Breeder" section with three breeder profiles.

  Displays a grid of three breeder cards with images and names/specialties.
  Each card has a gradient overlay at the bottom for text readability.

  @example
  {% render 'meet-a-breeder' %}
{% enddoc %}

<div class="text-center pt-10">
  <h2 class="inline-block bg-primary text-white font-titles text-center mx-auto mb-0 pt-0.5 px-4 text-5xl leading-tight" style="border-top-left-radius:.25em;border-top-right-radius:.25em;">Meet a Breeder</h2>
</div>

<section id="meet-a-breeder" class="border-t-[0.65rem] border-t-primary">
  <div class="max-w-[var(--width-container-content)] mx-auto px-12 py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <!-- Column 1 -->
      <div class="relative h-[40vh] md:h-[32vw] w-full overflow-hidden rounded-2xl bg-cover bg-center" style="background-image: url('https://dr9yafd9jyp80.cloudfront.net/pru/breeder-1.webp');">
        <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/80 to-transparent p-6 flex items-end">
          <div class="text-white font-titles text-lg md:text-xl">Travis &amp; McKale: Beagles &amp; Aussiedoodles</div>
        </div>
      </div>

      <!-- Column 2 -->
      <div class="relative h-[40vh] md:h-[32vw] w-full overflow-hidden rounded-2xl bg-cover bg-center" style="background-image: url('https://dr9yafd9jyp80.cloudfront.net/pru/pru-breeder.webp');">
        <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/80 to-transparent p-6 flex items-end">
          <div class="text-white font-titles text-lg md:text-xl">Ashton: Poodles, Beagles &amp; Dachshunds</div>
        </div>
      </div>

      <!-- Column 3 -->
      <div class="relative h-[40vh] md:h-[32vw] w-full overflow-hidden rounded-2xl bg-cover bg-center" style="background-image: url('https://dr9yafd9jyp80.cloudfront.net/pru/breeder-2.webp');">
        <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/80 to-transparent p-6 flex items-end">
          <div class="text-white font-titles text-lg md:text-xl">Bobby &amp; Samantha: Labrador Retrievers &amp; Corgis</div>
        </div>
      </div>
    </div>
  </div>
</section>
