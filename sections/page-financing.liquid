<section class="bg-bg-light py-16">
  <div class="w-full px-4 mx-auto">
    <div class="max-w-[var(--width-container-content)] mx-auto py-12">
      <h1 class="text-6xl md:text-7xl font-titles text-center mb-16">
        {{ 'financing.title' | t }}
      </h1>

      <div class="flex flex-col md:flex-row gap-8 md:gap-12 items-center">
        <div class="w-full md:w-1/2">
            <img src="https://cdn.shopify.com/s/files/1/0603/0471/9957/files/credova.webp?v=1763732399" alt="Credova Financing" loading="lazy" decoding="async" width="600" height="400" class="w-full h-auto" style="max-width:320px">
        </div>

        <div class="w-full md:w-1/2">
          <h2 class="text-4xl md:text-5xl font-titles mb-8">
            {{ 'financing.boost_power' | t }}
          </h2>

          <ul class="space-y-6 mb-8">
            <li class="text-body-copy">
              <strong class="font-semibold">{{ 'financing.approval_title' | t }}</strong> 
              {{ 'financing.approval_description' | t }}
            </li>
            <li class="text-body-copy">
              <strong class="font-semibold">{{ 'financing.prequalified_title' | t }}</strong> 
              {{ 'financing.prequalified_description' | t }}
            </li>
            <li class="text-body-copy">
              <strong class="font-semibold">{{ 'financing.pay_over_time_title' | t }}</strong> 
              {{ 'financing.pay_over_time_description' | t }}
            </li>
          </ul>

          <div class="text-center md:text-left">
            <a 
              href="https://credova.com/Apply/MAL000" 
              class="btn btn-primary inline-block hover:opacity-90 transition-opacity"
              target="_blank"
              rel="noopener noreferrer"
            >
              {{ 'financing.cta_button' | t }}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>



{% render 'wave-separator' %}

<section class="bg-bg-extralight pb-[200px]" style="margin-bottom:-200px;">
