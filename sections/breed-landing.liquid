                  {%- comment -%} Submit Button {%- endcomment -%}
                  <button 
                    type="submit"
                    class="w-full px-8 py-3 bg-[var(--color-primary)] text-white font-bold rounded-full hover:opacity-90 transition-opacity focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--color-primary)]"
                  >
                    Submit
                  </button>
                </form>
                </div>
              </div>
            </div>

          </div>
        </div>

      
      </div>
    </div>
</section>

