<section class="w-full bg-bg-extralight pt-[5rem]" style="padding-bottom:200px;margin-bottom:-200px">
    <div class="w-auto bg-bg-light rounded-none rounded-tl-[12.5vw] ms-[4vw] py-16" style="padding-bottom:200px;margin-bottom:-200px">
        <div class="max-w-[var(--width-container-content)] mx-auto px-8 md:px-16">
            <h1 class="font-titles text-5xl md:text-8xl mb-8 md:mb-11 font-semibold leading-tight tracking-tight text-center">{{ 'contact.title' | t }}</h1>

            <div class="flex gap-12 lg:gap-16 flex-col lg:flex-row">
                <!-- Contact form -->
                <div class="w-full lg:w-3/5 order-2 lg:order-1">
                    <form
                        action="https://forms.zohopublic.com/zohodocs3024/form/ContactUs/formperma/8c4OqacuW_ZjK6Q9qo8z-qOntJP_hGfWhDM4_sBvIxA/htmlRecords/submit"
                        name="form"
                        id="contact-form"
                        method="POST"
                        accept-charset="UTF-8"
                        enctype="multipart/form-data"
                        class="space-y-6"
                    >
                        <input type="hidden" name="zf_referrer_name" value="">
                        <input type="hidden" name="zf_redirect_url" value="">
                        <input type="hidden" name="zc_gad" value="">

                        <!-- Name fields -->
                        <div class="flex flex-col sm:flex-row gap-4">
                            <div class="flex-1">
                                <label for="contact-first-name" class="block font-semibold mb-1">
                                    {{ 'contact.form.first_name' | t }} <span class="text-primary">*</span>
                                </label>
                                <input
                                    type="text"
                                    id="contact-first-name"
                                    name="Name_First"
                                    maxlength="255"
                                    required
                                    class="w-full rounded-xl border border-gray-300 px-4 py-3 text-base focus:border-primary focus:ring-2 focus:ring-primary/30 outline-none transition"
                                    placeholder="{{ 'contact.form.first_name' | t }}"
                                >
                            </div>
                            <div class="flex-1">
                                <label for="contact-last-name" class="block font-semibold mb-1">
                                    {{ 'contact.form.last_name' | t }} <span class="text-primary">*</span>
                                </label>
                                <input
                                    type="text"
                                    id="contact-last-name"
                                    name="Name_Last"
                                    maxlength="255"
                                    required
                                    class="w-full rounded-xl border border-gray-300 px-4 py-3 text-base focus:border-primary focus:ring-2 focus:ring-primary/30 outline-none transition"
                                    placeholder="{{ 'contact.form.last_name' | t }}"
                                >
                            </div>
                        </div>

                        <!-- Email -->
                        <div>
                            <label for="contact-email" class="block font-semibold mb-1">
                                {{ 'contact.form.email' | t }} <span class="text-primary">*</span>
                            </label>
                            <input
                                type="email"
                                id="contact-email"
                                name="Email"
                                maxlength="255"
                                required
                                class="w-full rounded-xl border border-gray-300 px-4 py-3 text-base focus:border-primary focus:ring-2 focus:ring-primary/30 outline-none transition"
                                placeholder="{{ 'contact.form.email' | t }}"
                            >
                        </div>

                        <!-- Subject -->
                        <div>
                            <label for="contact-subject" class="block font-semibold mb-1">
                                {{ 'contact.form.subject' | t }} <span class="text-primary">*</span>
                            </label>
                            <input
                                type="text"
                                id="contact-subject"
                                name="SingleLine"
                                maxlength="255"
                                required
                                class="w-full rounded-xl border border-gray-300 px-4 py-3 text-base focus:border-primary focus:ring-2 focus:ring-primary/30 outline-none transition"
                                placeholder="{{ 'contact.form.subject' | t }}"
                            >
                        </div>

                        <!-- Message -->
                        <div>
                            <label for="contact-message" class="block font-semibold mb-1">
                                {{ 'contact.form.message' | t }} <span class="text-primary">*</span>
                            </label>
                            <textarea
                                id="contact-message"
                                name="MultiLine"
                                maxlength="65535"
                                rows="6"
                                required
                                class="w-full rounded-xl border border-gray-300 px-4 py-3 text-base focus:border-primary focus:ring-2 focus:ring-primary/30 outline-none transition resize-y"
                                placeholder="{{ 'contact.form.message_placeholder' | t }}"
                            ></textarea>
                        </div>

                        <!-- Submit -->
                        <div>
                            <button
                                type="submit"
                                class="btn btn-primary transition-colors duration-300 hover:bg-white hover:text-primary focus:bg-white focus:text-primary outline-none"
                            >
                                {{ 'contact.form.submit' | t }}
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Sidebar info -->
                <div class="w-full lg:w-2/5 order-1 lg:order-2">
                    <div class="bg-white rounded-3xl p-8 shadow-sm space-y-6">
                        <div>
                            <h2 class="font-titles text-3xl font-semibold mb-2">{{ 'contact.sidebar.get_in_touch' | t }}</h2>
                            <p class="text-gray-600">{{ 'contact.sidebar.description' | t }}</p>
                        </div>

                        <!-- Call -->
                        <div class="flex items-start gap-3">
                            <svg class="w-6 h-6 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                            </svg>
                            <div>
                                <p class="font-semibold">{{ 'contact.sidebar.call' | t }}</p>
                                <a href="tel:+18447337877" class="text-primary hover:underline">(844) SEE-PUPS</a><br>
                                <a href="tel:+18447337877" class="text-primary hover:underline">(844) 733-7877</a>
                            </div>
                        </div>

                        <!-- Text -->
                        <div class="flex items-start gap-3">
                            <svg class="w-6 h-6 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                            </svg>
                            <div>
                                <p class="font-semibold">{{ 'contact.sidebar.text' | t }}</p>
                                <a href="sms:+14172014497" class="text-primary hover:underline">417-201-4497</a>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="flex items-start gap-3">
                            <svg class="w-6 h-6 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                            <div>
                                <p class="font-semibold">{{ 'contact.sidebar.email' | t }}</p>
                                <a href="mailto:sales@puppysrus.com" class="text-primary hover:underline">sales@puppysrus.com</a>
                            </div>
                        </div>

                        <!-- Owners -->
                        <div class="flex items-start gap-3">
                            <svg class="w-6 h-6 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            <div>
                                <p class="font-semibold">{{ 'contact.sidebar.owners' | t }}</p>
                                <p class="text-gray-600">Amy &amp; Sonny Smith</p>
                            </div>
                        </div>

                        <!-- Mailing Address -->
                        <div class="flex items-start gap-3">
                            <svg class="w-6 h-6 text-primary shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            <div>
                                <p class="font-semibold">{{ 'contact.sidebar.mailing_address' | t }}</p>
                                <p class="text-gray-600">
                                    Puppys R Us, LLC.<br>
                                    1404 Southern Hills #246<br>
                                    West Plains, MO 65775
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "t:contact.title",
  "settings": []
}
{% endschema %}
