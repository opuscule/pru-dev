<section class="py-16 bg-[var(--color-bg-light)]">
    <div class="max-w-[var(--width-container-content)] mx-auto px-4">
        <div class="text-center max-w-3xl mx-auto">
            <h1 class="font-titles text-6xl md:text-8xl font-bold text-[var(--color-body-copy)] leading-none">{{ section.settings.main_heading | default: "Health Guarantee" }}</h1>
            {% if section.settings.sub_heading != blank %}
                <h3 class="font-titles text-2xl md:text-3xl text-[var(--color-body-copy)] mt-2">{{ section.settings.sub_heading }}</h3>
            {% endif %}
            <div class="mt-6 text-[var(--color-body-copy)] space-y-4 text-lg">
                {{ section.settings.intro_text }}
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 mt-16 items-start">
            <div class="space-y-6">
                <h2 class="font-titles text-5xl md:text-6xl font-bold text-[var(--color-body-copy)] leading-none">{{ section.settings.responsibilities_heading | default: "Buyer's Responsibilities:" }}</h2>
                {% if section.settings.responsibilities_image != blank %}
                    {{ section.settings.responsibilities_image | image_url: width: 800 | image_tag: class: 'w-full h-auto rounded-2xl shadow-lg', loading: 'lazy' }}
                {% else %}
                    {{ 'image' | placeholder_svg_tag: 'w-full h-auto rounded-2xl shadow-lg bg-gray-200' }}
                {% endif %}
            </div>
            <div class="space-y-6 text-[var(--color-body-copy)]">
                <h3 class="font-titles text-3xl md:text-4xl font-bold text-[var(--color-body-copy)] leading-none">{{ section.settings.policy_heading | default: "Health Check Policy:" }}</h3>
                <div class="space-y-4 text-base rte">
                    {{ section.settings.policy_text }}
                </div>
                {% if section.settings.badge_image != blank %}
                    {{ section.settings.badge_image | image_url: width: 400 | image_tag: class: 'mx-auto w-48 h-auto', loading: 'lazy' }}
                {% endif %}
            </div>
        </div>
    </div>
</section>

<div class="bg-[var(--color-bg-light)] -mb-px">
    <svg width="100%" height="7vw" viewBox="0 0 1280 140" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg">
         <g fill="var(--color-bg-extralight)"><path d="M1280 86c-19.9-17.21-40.08-39.69-79.89-39.69-57.49 0-56.93 46.59-115 46.59-53.61 0-59.76-39.62-115.6-39.62C923.7 53.27 924.26 87 853.89 87c-89.35 0-78.74-87-188.2-87C554 0 543.95 121.8 423.32 121.8c-100.52 0-117.84-54.88-191.56-54.88-77.06 0-100 48.57-151.75 48.57-40 0-60-12.21-80-29.51v54H1280z"></path></g>
    </svg>
</div>

<section class="py-16 bg-[var(--color-bg-extralight)]">
    <div class="max-w-[var(--width-container-content)] mx-auto px-4">
        <h2 class="font-titles text-5xl md:text-6xl font-bold text-[var(--color-body-copy)] leading-none mb-8 text-center">{{ section.settings.additional_info_heading | default: "Additional Information" }}</h2>
        <div class="max-w-4xl mx-auto bg-white p-4 md:p-8 rounded-2xl shadow-md text-center text-[var(--color-body-copy)] space-y-4 rte">
            {{ section.settings.additional_info_text }}
        </div>
    </div>
</section>

<section class="bg-[var(--color-bg-main)] pt-16 pb-[200px] -mb-[200px]">
    <div class="bg-[var(--color-bg-light)] rounded-tl-[12.5vw] ml-4 md:ml-16  pt-16" style="padding-bottom: 200px; margin-bottom: -200px;">
        <div class="max-w-[var(--width-container-content)] mx-auto px-4">
            <h2 class="font-titles text-5xl md:text-6xl font-bold text-gray-900 leading-none mb-8 text-center">{{ section.settings.guarantee_heading | default: "Puppys R Us Health Guarantee" }}</h2>
            <div class="max-w-4xl mx-auto text-[var(--color-body-copy)] space-y-6 rte">
                {{ section.settings.guarantee_text }}
            </div>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Health Guarantee Page",
    "settings": [
        {
            "type": "header",
            "content": "Intro Section"
        },
        {
            "type": "text",
            "id": "main_heading",
            "label": "Main Heading",
            "default": "Health Guarantee"
        },
        {
            "type": "text",
            "id": "sub_heading",
            "label": "Sub Heading",
            "default": "Additional Information"
        },
        {
            "type": "richtext",
            "id": "intro_text",
            "label": "Intro Text",
            "default": "<p><b>All puppies sold in good faith...</b></p>"
        },
        {
            "type": "header",
            "content": "Responsibilities Section"
        },
        {
            "type": "text",
            "id": "responsibilities_heading",
            "label": "Responsibilities Heading",
            "default": "Buyer's Responsibilities:"
        },
        {
            "type": "image_picker",
            "id": "responsibilities_image",
            "label": "Responsibilities Image"
        },
        {
            "type": "text",
            "id": "policy_heading",
            "label": "Policy Heading",
            "default": "Health Check Policy:"
        },
        {
            "type": "richtext",
            "id": "policy_text",
            "label": "Policy Text"
        },
        {
            "type": "image_picker",
            "id": "badge_image",
            "label": "Guarantee Badge Image"
        },
         {
            "type": "header",
            "content": "Additional Info Section (Middle)"
        },
        {
            "type": "text",
            "id": "additional_info_heading",
            "label": "Heading",
            "default": "Additional Information"
        },
        {
            "type": "richtext",
            "id": "additional_info_text",
            "label": "Content"
        },
        {
            "type": "header",
            "content": "Health Guarantee Section (Bottom)"
        },
        {
            "type": "text",
            "id": "guarantee_heading",
            "label": "Guarantee Heading",
            "default": "Puppys R Us Health Guarantee"
        },
        {
            "type": "richtext",
            "id": "guarantee_text",
            "label": "Guarantee Terms Text"
        }
    ],
    "presets": [
        {
            "name": "Health Guarantee Page"
        }
    ]
}
{% endschema %}
