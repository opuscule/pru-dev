{% comment %}
  This section is used in the article template to render the article page, which
  displays the full content of the blog post and can optionally include a
  comments section for customers (not shown in this example).

  https://shopify.dev/docs/storefronts/themes/architecture/templates/article
{% endcomment %}

<section class="article-page py-16 bg-[var(--color-bg-light)]" style="padding-bottom:200px;margin-bottom:-200px">
  <div class="max-w-[var(--width-container-content)] mx-auto px-4">
    
    <article class="w-full max-w-2xl mx-auto bg-white rounded-3xl p-6">
      
      {%- comment -%} Featured Image {%- endcomment -%}
      {% if article.image %}
        <div class="mb-6">
          {{ article.image | image_url: width: 700 | image_tag: class: "w-full h-auto rounded-2xl object-cover" }}
        </div>
      {% endif %}

      {%- comment -%} Title {%- endcomment -%}
      <h1 class="text-3xl md:text-6xl font-normal tracking-tight text-gray-900 mb-4 leading-tight">
        {{ article.title }}
      </h1>

      {%- comment -%} Meta Information {%- endcomment -%}
      <div class="flex items-center gap-2 text-gray-600 mb-6 text-sm">
        <span class="font-bold text-gray-900">Amy</span>
        <span>•</span>
        {% assign date = article.published_at | date: "%b. %d, %Y" %}
        <span>{{ date }}</span>
        {% if article.tags.size > 0 %}
          <span>•</span>
          <span>{{ article.tags.first | capitalize }}</span>
        {% endif %}
      </div>

      {%- comment -%} Article Content {%- endcomment -%}
      <div class="article-content prose prose-lg max-w-none leading-relaxed" style="color: var(--color-body-copy);">
        {{ article.content }}
      </div>

    </article>

  </div>
</section>



{% stylesheet %}
  .article-content {
    line-height: 1.7;
    color: var(--color-body-copy);
  }
  
  .article-content h2,
  .article-content h3,
  .article-content h4 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-weight: 600;
    color: var(--color-body-copy);
    line-height: 1.15;
  }
  .article-content h2 {
    font-size: 2.5em;

  }
  .article-content h3 {
    font-size:2.25em;
  }
  
  .article-content p {
    margin-bottom: 1.25rem;
    color: var(--color-body-copy);
  }
  
  .article-content ul,
  .article-content ol {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
    color: var(--color-body-copy);
    list-style-type: auto;
  }
  .article-content ul {
    list-style-type: disc;
  }
  
  
  .article-content blockquote {
    border-left: 4px solid var(--color-primary);
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--color-body-copy);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.article",
  "settings": []
}
{% endschema %}
